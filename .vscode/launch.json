    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "TEST",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bin/server.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "WORKER",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bin/server.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "WORKER MIGRATE",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "migration"
            ],
            "program": "${workspaceFolder}/bin/server.js"
        },
    ]
}